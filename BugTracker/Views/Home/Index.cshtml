<!-- Header -->

<header id="top" class="header">
    <div class="text-vertical-center">
        <h1 class="heading">Welcome to Swoop</h1>
        <img src="~/img/rsz_swoop.png" class="wow fadeInDownBig" data-wow-delay=".6s" style="height:350px;width:300px;padding-bottom:30px;padding-top:30px;"/>
        
        
