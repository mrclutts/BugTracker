@model BugTracker.Models.ProjectAdminViewModel
@{
    ViewBag.Title = "AssignUsers";
}

<div class="container min-height">
    <h2>Assign Users</h2>



    @using (Html.BeginForm("AssignUsers", "Projects", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                <div class="col-md-10">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Project.Id)
                    @Html.ListBox("SelectedUsers", Model.Users, htmlAttributes: new { @class = "abc" })
                </div>
            </div>
          <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>

    }

    <div>
        @Html.ActionLink("Back to List", "Projects")
    </div>
</div>

@section scripts {
    
    
<script src="~/Scripts/magicsuggest-min.js"></script>
<script type="text/javascript">
    $('.abc').magicSuggest({
        placeholder: 'Make a selection',
       
    });
</script>

    }