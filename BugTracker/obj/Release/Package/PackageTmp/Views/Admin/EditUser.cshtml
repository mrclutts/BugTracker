@model BugTracker.Models.AdminUserViewModel
@{
    ViewBag.Title = "EditUserRoles";
}

<div class="container">
    <h2>Edit User Roles</h2>



    @using (Html.BeginForm("EditUser", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                <div class="col-md-10">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    @Html.ListBox("SelectedRoles", Model.Roles, htmlAttributes: new { @class = "abc" })
                </div>
            </div>
          <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>

    }

    <div>
        @Html.ActionLink("Back to List", "Users")
    </div>
</div>

@section scripts {
    
    
<script src="~/Scripts/magicsuggest-min.js"></script>
<script type="text/javascript">
    $('.abc').magicSuggest({
        placeholder: 'Make a selection',
        
    });
</script>

    }